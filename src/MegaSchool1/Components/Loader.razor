@inherits Components.ComponentBase

@if(!Loaded)
{
    <MudSkeleton SkeletonType="@SkeletonType" Height="@Height" Width="@Width"/>
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool Loaded { get; set; }

    [Parameter]
    public string? Height { get; set; } = "100px";

    [Parameter]
    public string? Width { get; set; }

    [Parameter]
    public SkeletonType SkeletonType { get; set; } = SkeletonType.Rectangle;
}