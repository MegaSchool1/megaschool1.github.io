@using MegaSchool1.Model
@using QRCoder
@inherits Components.ComponentBase

<MudStack Row="true" Style="width:100%;">
    <MudSpacer/>
    <CopyContent TextToCopy="@TextToCopy" Tooltip="@Tooltip" />
    @if (!string.IsNullOrWhiteSpace(Title))
    {
        <MudPaper Class="d-flex align-center" Elevation="0">
            <MudText Style="">@Title</MudText>
        </MudPaper>
    }
    @if(ShowWebShare)
    {
        <WebShareContent TextToCopy="@TextToCopy" Tooltip="@Tooltip" ImageUrl="@ImageUrl" />
    }
    <QRCode Content="@QRCode" />
    <MudSpacer/>
</MudStack>

@code {
    [Parameter]
    public string TextToCopy { get; set; }

    [Parameter]
    public string Tooltip { get; set; }

    [Parameter]
    public string ImageUrl { get; set; } = Constants.GetImageUrl(Image.MoneyChallengeLogo);

    [Parameter]
    public bool ShowWebShare { get; set; } = true;

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? QRCode { get; set; }
}
