    private bool _pageLoaded;
    private TeamMember? _selectedTeamMember;

    protected override void OnInitialized()
    {
        _pageLoaded = true;

        _selectedTeamMember = AppState?.User;
        
        this.StateHasChanged();
    }

    private string ShareableContentPrefix() =>
        _selectedTeamMember?.MemberId == null || _selectedTeamMember?.MemberId == AppState?.User?.MemberId ? string.Empty : $"For {_selectedTeamMember?.Name}: {Environment.NewLine}{Environment.NewLine}";

    private RenderFragment ContentViewMultilingual(Content content) => __builder =>
    {
        var english = UI.EnglishLocale[content];
        var spanish = UI.SpanishLocale[content];

        <ShareableVideoMultilingual Description="@english.AppTitle"
                                    Duration="@english.Duration"
                                    Url="@english.MinimalistUrl()"

                                    EnglishTextToCopy="@($"{ShareableContentPrefix()}{Shareable.VideoShareable(english)}")"
                                    EnglishTooltip="Copied!"
                                    EnglishImageUrl="@Constants.GetImageUrl(english.Image ?? Image.MoneyChallengeLogo)"

                                    SpanishTextToCopy="@($"{ShareableContentPrefix()}{Shareable.VideoShareable(spanish)}")"
                                    SpanishTooltip="Copied"
                                    SpanishImageUrl="@Constants.GetImageUrl(spanish.Image ?? Image.MoneyChallengeLogo)"/>
    };

    private RenderFragment ContentView(Content content) => __builder =>
    {
        var english = UI.EnglishLocale[content];

        <ShareableVideo Description="@english.AppTitle"
                        Duration="@english.Duration"
                        Url="@english.MinimalistUrl()"
                        TextToCopy="@($"{ShareableContentPrefix()}{Shareable.VideoShareable(english)}")"
                        Tooltip="Copied!"
                        ImageUrl="@Constants.GetImageUrl(english.Image ?? Image.MoneyChallengeLogo)"/>
    };
    
    private RenderFragment CapturePage(Content content) => __builder =>
    {
        var english = UI.EnglishLocale[content];

        <ShareableVideo Description="@english.AppTitle"
                        Duration="@english.Duration"
                        Url="@Constants.GetCapturePage(content, Language.English, _selectedTeamMember?.MemberId, "Example-Key-Word")"
                        TextToCopy="@($"{ShareableContentPrefix()}{english.ShareableTitle}{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}{Constants.GetCapturePage(english.ContentId, Language.English, _selectedTeamMember?.MemberId!, "Example-Key-Word")}")"
                        Tooltip="Copied!"
                        ImageUrl="@Constants.GetImageUrl(english.Image ?? Image.MoneyChallengeLogo)"/>
    };
