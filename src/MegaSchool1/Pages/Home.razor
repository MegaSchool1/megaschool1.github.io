            </MudStack>
        </MudCardContent>
    </MudCard>
    <MudCard Outlined="true">
        <MudCardHeader>Home Buyers</MudCardHeader>
        <MudCardContent>
            <MudStack Spacing="3">
                <EmbeddedVideo Video="@(GetVideo(Content.KeysToHomeOwnership))" />
