        <MudCardContent>
            <MudStack Spacing="3">
                <MudHidden Breakpoint="BreakPoint">
                    <MudImage Src="https://static.wixstatic.com/media/5f35ec_9fd1264d02b24f76ab805846a0b5c9a4~mv2.jpg" Fluid="true"/>
                </MudHidden>
                <MudHidden Breakpoint="BreakPoint" Invert="true">
                    <Centered>
                        <MudImage Src="https://static.wixstatic.com/media/5f35ec_9fd1264d02b24f76ab805846a0b5c9a4~mv2.jpg" Fluid="true" Style="max-width:500px;"/>
                    </Centered>
                </MudHidden>
                <MudText Align="Align.Center">Learn what Bitcoin is and how to make money with cryptocurrencies.</MudText>
            </MudStack>
        </MudCardContent>
    </MudCard>
