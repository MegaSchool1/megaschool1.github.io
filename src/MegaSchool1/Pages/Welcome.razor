@page "/welcome"
@inherits ShareableCapturePage
@using MegaSchool1.Model
@using MegaSchool1.Pages.CapturePage
@using Microsoft.AspNetCore.Components.Rendering

@*
    The line below is necessary to render the base page.

    See https://stackoverflow.com/questions/59990832/basic-component-layout-inheritance-blazor#comment138651420_63498549
*@
@((RenderTreeBuilder builder) => base.BuildRenderTree(builder))

@code {
    protected override void OnInitialized()
    {
        this.ContentId = Content.MS1Opportunity.ToString();
        this.Language = "en";
        base.MemberId = "MS1";
        this.ReferralId = "megaschool";

        base.OnInitialized();

        this.Shareable.AuxiliaryText = "Download FREE Now!<br/><br/>Use code {ReferralCode}";
    }
}
