@page "/{Language}/72/{MemberId}/{ReferralId}"
@inherits CapturePageBase
@using MegaSchool1.Components
@using MegaSchool1.Model
@inject UISettings UI

<PageTitle>72-Hour Money Challenge!</PageTitle>

<Centered><MudImage Src="/images/72-hour-money-challenge.png" /></Centered>
<br/>
<br/>
<Centered><EmbeddedVideo YouTube="@_video!.Id" /></Centered>
<br />
<br />
<Centered><MudText Style="color:white;" Align="Align.Center">To take the challenge or learn more, text<br /><br />'@ReferralId' to @QMDPhoneNumber</MudText></Centered>

@code {
    private VideoResource? _video;

    protected override void OnInitialized()
    {
        _video = Language == Spanish ? UI.SpanishLocale[Content.MoneyChallenge] : UI.EnglishLocale[Content.MoneyChallenge];
    }
}
