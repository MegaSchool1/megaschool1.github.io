@page "/{Language}/CreditRestoration/{MemberId}/{ReferralId}"
@inherits CapturePageBase
@using MegaSchool1.Components
@using MegaSchool1.Model
@inject UISettings UI

<PageTitle>MWR Credit Restoration</PageTitle>

<MudStack Style="height:100%;">
    <Centered><MudImage Src="/images/72-hour-money-challenge.png" /></Centered>
    <br/>
    <Centered><EmbeddedVideo Vimeo="@((_video!.Id, _video!.Hash))" /></Centered>
    <br />
    <br />
    <Centered><MudText Style="color:white;" Align="Align.Center">For questions or sign-up information, text<br /><br />'@ReferralId' to @QMDPhoneNumber</MudText></Centered>
    <MudSpacer/>
</MudStack>

@code {
    private VideoResource? _video;

    protected override void OnInitialized()
    {
        _video = Language == Spanish ? UI.SpanishLocale[Content.CreditRestoration] : UI.EnglishLocale[Content.CreditRestoration];
    }
}
